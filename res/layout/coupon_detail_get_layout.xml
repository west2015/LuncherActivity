<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_above="@+id/ll_buy_now">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/detail_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/good_detail_item_bg">
                <ImageView
                    android:id="@+id/detail_couponImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/goods_mr_img"/>
               <TextView
                   android:id="@+id/detail_couponName"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_above="@+id/detail_couponImg"
                   android:textSize="18sp"
                   android:singleLine="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/good_detail_gray_bg">
                <TextView
                    android:id="@+id/tvCouponName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:layout_toLeftOf="@+id/iv_collect"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/good_detail_item_bg"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                >
                <TextView
                    android:id="@+id/tvPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:text="编号"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/txtunclick"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvPriceTitle"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/tvOldPriceTitle"
                    android:gravity="left|center_vertical"
                    />
                <TextView
                    android:id="@+id/tvOldPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:text="市场价"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/tvOldPrice"
                    />
                <TextView
                    android:id="@+id/tvOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/txtunclick"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/good_detail_item_bg"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/priveCountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:text="数量"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    />

                <Button
                    android:id="@+id/btn_count_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/priveCountTitle"
                    android:text="—"
                    android:background="@drawable/good_detail_binus"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/et_count"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:paddingLeft="8dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/good_detail_count"
                    android:layout_toRightOf="@+id/btn_count_minus"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <Button
                    android:id="@+id/btn_count_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/et_count"
                    android:background="@drawable/good_detail_binus"
                    />
                <TextView
                    android:id="@+id/countFinalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="库存:"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/btn_count_add"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/countFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/countFinalTitle"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_marginLeft="8dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/good_detail_item_bg"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/useTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:text="使用时间"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/priveTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/goods_down_icon"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/good_detail_item_bg"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                >
	            <TextView
	                android:id="@+id/tvSueDateGet"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="12dp"
	                android:paddingTop="12dp"
	                android:textSize="15sp"
	                android:textColor="@color/black"
	                />
	            <TextView
	                android:id="@+id/tvDueDateGet"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="12dp"
	                android:paddingTop="12dp"
	                android:layout_marginBottom="12dp"
	                android:textSize="15sp"
	                android:textColor="@color/black"
	                />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/good_detail_item_bg"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:text="使用规则"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/goods_down_icon"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/useDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:textSize="16sp"
                android:textColor="@color/txtunclick"
                android:background="@drawable/good_detail_item_bg"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />
            </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/ll_buy_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:background="@drawable/good_detail_item_bg"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/get_now">
            <TextView
                android:id="@+id/btn_add_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="立即领取"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
		</RelativeLayout>
    </RelativeLayout>
</RelativeLayout>