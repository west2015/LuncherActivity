<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/good_detail_item_bg"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/register_phone"
            />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_phone"
            android:background="@color/translucents"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:hint="请输入已注册手机号"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="phone"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/good_detail_item_bg"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <ImageView
            android:id="@+id/ivYanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/rigister_yz"
            />
        <EditText
            android:id="@+id/etYz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivYanzheng"
            android:background="@color/translucents"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:hint="请输入验证码"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/getyam"
            android:singleLine="true"
            />
        <Button
            android:id="@+id/getyam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_get_yzm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/good_detail_item_bg"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivYanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/rigister_yz"
            />

        <EditText
            android:id="@+id/etYz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivYanzheng"
            android:background="@color/translucents"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:hint="请输入验证码"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/getyam"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/getyam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_get_yzm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/good_detail_item_bg"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/ivPswFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/mima_first"
            />

        <EditText
            android:id="@+id/etPswFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivPswFirst"
            android:background="@color/translucents"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:hint="请输入密码"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="textPassword"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/good_detail_item_bg"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/ivPswSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/mima_second"
            />

        <EditText
            android:id="@+id/etPswSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivPswSecond"
            android:background="@color/translucents"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:hint="请再次输入密码"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="textPassword"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btnRigester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/register_now"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        />
</LinearLayout>