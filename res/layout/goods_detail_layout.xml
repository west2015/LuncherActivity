<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
         android:scrollbars="none"
        android:layout_above="@+id/ll_buy_now"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_detail_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.nhd.mall.widget.PageControl
                    android:id="@+id/pageControl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/viewPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true">
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/good_detail_gray_bg">

                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:layout_toLeftOf="@+id/iv_collect"
                     />
                    <ImageView
                        android:id="@+id/iv_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/good_detail_collect_no_click"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
              >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/good_detail_item_bg"
                    android:paddingTop="5dp">
                    <TextView
                        android:id="@+id/tvCounterTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="品牌"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:id="@+id/tvCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/txtunclick"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvCounterTitle"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/tvNumberTitle"
                        android:gravity="left|center_vertical"
                        />
                    <TextView
                        android:id="@+id/tvNumberTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="编号"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/tvNumber"
                        />
                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/txtunclick"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/good_detail_item_bg"
                    android:paddingTop="5dp"
                    >
                    <TextView
                        android:id="@+id/tvPriceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="价格"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/txtclick"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tvPriceTitle"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/tvOldPriceTitle"
                        android:gravity="left|center_vertical"
                        />
                    <TextView
                        android:id="@+id/tvOldPriceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="市场价"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/tvOldPrice"
                        />
                    <TextView
                        android:id="@+id/tvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/txtunclick"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:background="@drawable/good_detail_item_bg">

                    <TextView
                        android:id="@+id/priveCountTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="数量"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        />
                    <Button
                        android:id="@+id/btn_count_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/priveCountTitle"
                        android:text="—"
                        android:background="@drawable/good_detail_binus"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                         />
                    <TextView
                        android:id="@+id/et_count"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:paddingLeft="8dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/good_detail_count"
                        android:layout_toRightOf="@+id/btn_count_minus"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                    <Button
                        android:id="@+id/btn_count_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/et_count"
                        android:background="@drawable/good_detail_binus"
                        />
                    <TextView
                        android:id="@+id/countFinalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="库存:"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/btn_count_add"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/countFinal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="0件"
                        android:layout_toRightOf="@+id/countFinalTitle"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        />
                    <TextView
                    android:id="@+id/countLimitTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="限购:"
                    android:layout_toRightOf="@+id/countFinal"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    />
                    <TextView
                        android:id="@+id/countLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="0件"
                        android:layout_toRightOf="@+id/countLimitTitle"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/good_detail_item_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/good_detail_another">

                    <TextView
                        android:id="@+id/priveTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="其他参数"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        />
                </RelativeLayout>

                <com.nhd.mall.widget.ParemiterView
                    android:id="@+id/paremiterView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="vertical"
                   >
                </com.nhd.mall.widget.ParemiterView>
            </LinearLayout>
            <TextView
                android:id="@+id/goodsDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_margin="10dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:text="商品信息"
                android:gravity="center_vertical"
                android:background="@drawable/good_detail_spxin"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/goodsComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:text="评价"
                android:gravity="center_vertical"
                android:background="@drawable/good_detail_spxin"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/ll_buy_now"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:background="@drawable/good_detail_item_bg"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/good_detail_buy_now"
            android:layout_centerVertical="true"
             />
        <Button
            android:id="@+id/btn_add_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/good_detail_add_car_new"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_buy_now"
            />
        <ImageView
            android:id="@+id/iv_to_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go_to_shop_car"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    </RelativeLayout>