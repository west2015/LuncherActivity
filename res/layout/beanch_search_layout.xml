<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/main_banner_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btnback" />

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/btnBack"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/rlEwm"
        android:background="@drawable/search_et_bg"
        >
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_et_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/btnSearch"
            android:hint="搜索品牌"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:background="@color/translucents"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    </RelativeLayout>
    <com.nhd.mall.widget.PullDownView
        android:id="@+id/shopListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/shop_devide"
        android:scrollbars="none"
        android:layout_below="@+id/rl_title"
        />
    <RelativeLayout
        android:id="@+id/rl_have_no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:visibility="gone"
        >
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/have_no_store"
        android:layout_above="@+id/tv"
       android:layout_centerHorizontal="true"
        />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无品牌"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="@color/txtunclick"
            />
        </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerInParent="true"
        android:background="@drawable/load"
        android:visibility="gone"/>
</RelativeLayout>