<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/good_detail_item_bg"
            >
            <TextView
                android:id="@+id/tvDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/txtunclick"
                android:textSize="16sp"
                android:text="发布时间:"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/txtunclick"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/tvDateTitle"
                android:layout_marginLeft="12dp"
                android:singleLine="true"
                />
            <ImageView
                android:id="@+id/ivFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/goods_top_icon"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/good_detail_item_bg"
            android:padding="12dp"
            >
            <TextView
                android:id="@+id/tvjobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="岗位:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tvJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/tvjobTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tvManNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/tvGoodsNumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/tvManNum"
                />
            <TextView
                android:id="@+id/tvdaiyuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待遇:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_below="@+id/tvjobTitle"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/tvDaiyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/tvdaiyuTitle"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/tvdaiyuTitle"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/tvRequestTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="要求:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_below="@+id/tvdaiyuTitle"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/tvRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_below="@+id/tvRequestTitle"
                android:layout_marginTop="5dp"
               android:paddingBottom="5dp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>